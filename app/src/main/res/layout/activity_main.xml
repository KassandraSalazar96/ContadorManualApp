<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="contador.kassandrasalazar.android.contador.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etiqueta_conteo" />
    <EditText
        android:id="@+id/etiqueta_conteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etiqueta_cero" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/boton_contar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_contar"/>
        <Button
            android:id="@+id/boton_reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_reiniciar"/>
     </LinearLayout>
</LinearLayout>
